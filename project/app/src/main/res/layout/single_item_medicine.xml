        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        app:srcCompat="@drawable/ic_in_comp_allowed" />

    <ImageView
        android:id="@+id/outComp"
        android:layout_marginTop="25dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
